#include<stdio.h>
void main()
{
int i,num,sum=0;
printf("enter num:");
scanf("%d",&num);
for(i=1;i<num;i++)
{
   if(num%i==0)
   { 
     printf("\n%d",i);
     sum=sum+i;
   }
}
printf("\ntotal sum is:%d",sum);
if(sum==num)
{
   printf("\n%d is a perfect number",num);
}
else
{
   printf("\n%d is not a perfect number",num);
}
}
