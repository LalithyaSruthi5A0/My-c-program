#include<stdio.h>
void main()
{
int a,b,c,d;
printf("enter a,b,c&d:");
scanf("%d%d%d%d", &a, &b, &c, &d);
if(a>b)
{ 
  if(a>c)
   { 
     if(a>d)
     {  
        printf("%d is largest   number ",a);
     }
     else
     {  
        printf("%d is largest number",d);
     }
   }
   else if(c>d)
   { 
      printf("%d is largest number",c);
   }
   else
   { 
      printf("%d is largest number", d);
   }
}
else if(b>c)
{
  if(b>d)
  { 
      printf("%d is largest number",b);
  }
  else
  { 
      printf("%d is largest number",d);
  }
}
else if(c>d)
{ 
  printf("%d is largest number",c);
}
else
{
  printf("%d is largest number",d);
}
}
