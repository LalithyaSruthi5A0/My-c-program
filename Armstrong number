#include<stdio.h>
void main()
{
int number,num,rem,i=0,sum=0;
printf("enter n:");
scanf("%d",&number);
for(num=number;num!=0;i++)
{
   num/=10;
} 
num=number;
while(num!=0)
{
    rem=num%10;
    sum+=pow(rem,i);
    num/=10;
}      
if(sum==number)
{
    printf("%d is an armstrong number",number);
 }
else 
{
    printf("%d is not an armstrong number",number);
 }     
 
}
   
